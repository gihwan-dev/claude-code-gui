{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "claude-code-gui",
  "version": "0.1.0",
  "identifier": "com.gihwan-dev.claude-code-gui",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Claude Code GUI",
        "width": 1000,
        "height": 700,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "shadow": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' tauri: ipc: http://ipc.localhost"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "gihwan-dev",
    "category": "DeveloperTool",
    "shortDescription": "A GUI client for Claude Code",
    "longDescription": "A desktop GUI application for Claude Code, built with Tauri, React, TypeScript, Tailwind CSS, and shadcn/ui.",
    "copyright": "Copyright Â© 2026 gihwan-dev. All rights reserved.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": ""
    }
  },
  "plugins": {
    "updater": {
      "active": false,
      "endpoints": [
        "https://github.com/gihwan-dev/claude-code-gui/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
